<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.microsoft.azure</groupId>
  <artifactId>docs</artifactId>
  <version>1.0</version>
  <packaging>pom</packaging>

  <name>Microsoft Azure SDK for Java</name>

  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
    </license>
  </licenses>

  <developers>
    <developer>
      <id>microsoft</id>
      <name>Microsoft</name>
    </developer>
  </developers>
  <modules>
    <!-- appservice -->
    <module>./appservice/resource-manager/v2016_03_01</module>
    <module>./appservice/resource-manager/v2016_08_01</module>
    <module>./appservice/resource-manager/v2016_09_01</module>
    <module>./appservice/resource-manager/v2018_02_01</module>
    <!-- compute -->
    <module>./compute/resource-manager/v2017_03_30</module>
    <module>./compute/resource-manager/v2017_09_01</module>
    <module>./compute/resource-manager/v2017_12_01</module>
    <module>./compute/resource-manager/v2018_04_01</module>
    <!-- network -->
    <module>./network/resource-manager/v2017_10_01</module>
    <module>./network/resource-manager/v2018_04_01</module>
    <module>./network/resource-manager/v2018_05_01</module>
    <!-- sql -->
    <module>./sql/resource-manager/v2014_04_01</module>
    <module>./sql/resource-manager/v2017_10_01_preview</module>
  </modules>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-javadoc-plugin</artifactId>
          <version>3.0.1</version>
          <configuration>
            <doctitle>Microsoft Azure SDK for Java</doctitle>
            <windowtitle>Microsoft Azure SDK for Java</windowtitle>            
            <additionalparam>-Xdoclint:none</additionalparam>
            <excludePackageNames>*.samples;*.implementation.*;*.utils.*</excludePackageNames>
            <sourceFileExcludes>
              <sourceFileExclude>JAXBDebug.*</sourceFileExclude>
            </sourceFileExcludes>            
            <groups>
              <group>
                <title>Azure Management AppService SDK</title>
                <packages>com.microsoft.azure.management.appservice*</packages>
              </group>
              <group>
                <title>Azure Management Compute SDK</title>
                <packages>com.microsoft.azure.management.compute*</packages>
              </group>
              <group>
                <title>Azure Management Network SDK</title>
                <packages>com.microsoft.azure.management.network*</packages>
              </group>
              <group>
                <title>Azure Management SQL SDK</title>
                <packages>com.microsoft.azure.management.sql*</packages>
              </group>
            </groups>            
          </configuration>
          <executions>
            <execution>
              <id>aggregate</id>
              <goals>
                <goal>aggregate</goal>
              </goals>
              <phase>site</phase>
              <configuration>
                <!-- Specific configuration for the aggregate report -->
              </configuration>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>3.7.0</version>
          <configuration>
            <excludes>
              <exclude>**/JAXBDebug.java</exclude>
              <exclude>**/*test/*</exclude>
            </excludes>
        </configuration>
      </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>