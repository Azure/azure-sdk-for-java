<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>3.2.0</version>
    <relativePath/> <!-- lookup parent from repository -->
  </parent>

  <groupId>com.azure.samples</groupId>
  <artifactId>azure-samples-graalvm-spring-storageexplorer</artifactId>
  <version>1.0.0-beta.1</version>
  <name>Azure Storage GraalVM Samples using Spring</name>
  <description>Azure Storage Explorer sample</description>

  <properties>
    <java.version>17</java.version>
    <graalvm.version>22.3.0</graalvm.version>
    <native.buildtools.version>0.10.0</native.buildtools.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>com.azure</groupId>
        <artifactId>azure-sdk-bom</artifactId>
        <version>1.2.10</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <dependencies>
    <dependency>
      <groupId>com.azure</groupId>
      <artifactId>azure-core</artifactId>
      <version>1.37.0</version>
    </dependency>
    <dependency>
      <groupId>com.azure</groupId>
      <artifactId>azure-storage-blob</artifactId>
    </dependency>
    <dependency>
      <groupId>net.java.dev.jna</groupId>
      <artifactId>jna</artifactId>
      <version>5.6.0</version>
    </dependency>

    <!-- this enables the Spring support for native-image compilation -->
    <!-- <dependency>
      <groupId>org.springframework.experimental</groupId>
      <artifactId>spring-native</artifactId>
      <version>0.11.4</version>
    </dependency> -->



    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-thymeleaf</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <configuration>
          <image>
            <builder>paketobuildpacks/builder:tiny</builder>
            <env>
              <BP_NATIVE_IMAGE>true</BP_NATIVE_IMAGE>
            </env>
          </image>
        </configuration>
        <executions>
          <execution>
              <id>process-aot</id>
              <goals>
                  <goal>process-aot</goal>
              </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <configuration>
          <classifier>exec</classifier>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <repositories>
    <repository>
      <id>spring-releases</id>
      <name>Spring Releases</name>
      <url>https://repo.spring.io/release</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>spring-releases</id>
      <name>Spring Releases</name>
      <url>https://repo.spring.io/release</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

  <profiles>
    <profile>
      <id>native</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.graalvm.buildtools</groupId>
            <artifactId>native-maven-plugin</artifactId>
            <version>0.10.6</version>
            <configuration>
              <mainClass>com.azure.samples.graalvm.spring.storageexplorer.SpringNativeApplication</mainClass>
              <imageName>storageexplorer</imageName>
              <buildArgs>

                <!-- Azure SDK Core -->
                <buildArg>--initialize-at-build-time=com.azure.core.util.logging.ClientLogger</buildArg>
                <buildArg>--initialize-at-build-time=com.azure.core.implementation</buildArg>
                <buildArg>--initialize-at-build-time=com.azure.core.util</buildArg>
                <buildArg>--initialize-at-build-time=com.azure.core.http</buildArg>

                <!-- Azure Storage -->
                <buildArg>--initialize-at-build-time=com.azure.storage.blob</buildArg>
                <buildArg>--initialize-at-build-time=com.azure.storage.common</buildArg>

                <!-- Your application classes -->
                <buildArg>
                  --initialize-at-build-time=com.azure.samples.graalvm.spring.storageexplorer</buildArg>

                <!-- Logging frameworks -->
                <buildArg>--initialize-at-build-time=org.slf4j</buildArg>
                <buildArg>--initialize-at-build-time=ch.qos.logback</buildArg>
                <buildArg>--initialize-at-build-time=org.apache.logging</buildArg>

                <!-- Spring Framework -->
                <buildArg>--initialize-at-build-time=org.springframework.boot.autoconfigure.logging</buildArg>
                <buildArg>
                  --initialize-at-build-time=org.springframework.core.io.support.SpringFactoriesLoader</buildArg>

                <!-- JNA -->
                <buildArg>--initialize-at-build-time=com.sun.jna</buildArg>

                <!-- Common utility libraries -->
                <buildArg>
                  --initialize-at-build-time=com.fasterxml.jackson.databind.ext.Java7Handlers</buildArg>
                <buildArg>
                  --initialize-at-build-time=com.fasterxml.jackson.databind.ext.Java7HandlersImpl</buildArg>
                <buildArg>--initialize-at-build-time=com.fasterxml.jackson.databind.ext.Java7Support</buildArg>
                <buildArg>--initialize-at-build-time=com.fasterxml.jackson.databind.util.LRUMap</buildArg>

                <!-- JNA Components that must be initialized at runtime -->
                <buildArg>--initialize-at-run-time=com.sun.jna.Native</buildArg>
                <buildArg>--initialize-at-run-time=com.sun.jna.NativeLibrary</buildArg>
                <buildArg>--initialize-at-run-time=com.sun.jna.Function</buildArg>
                <buildArg>--initialize-at-run-time=com.sun.jna.Memory</buildArg>
                <buildArg>--initialize-at-run-time=com.sun.jna.Pointer</buildArg>
                <buildArg>--initialize-at-run-time=com.sun.jna.CallbackReference</buildArg>
                <buildArg>--initialize-at-run-time=com.sun.jna.Structure</buildArg>
                <buildArg>--initialize-at-run-time=com.sun.jna.NativeMapped</buildArg>
                <buildArg>--initialize-at-run-time=com.sun.jna.NativeLong</buildArg>

                <!-- Network-related classes -->
                <buildArg>--initialize-at-run-time=io.netty.channel.unix</buildArg>
                <buildArg>--initialize-at-run-time=io.netty.channel.epoll</buildArg>
                <buildArg>--initialize-at-run-time=io.netty.channel.socket.unix</buildArg>
                <buildArg>--initialize-at-run-time=io.netty.util.internal.PlatformDependent</buildArg>
                <buildArg>--initialize-at-run-time=io.netty.util.internal.PlatformDependent0</buildArg>

                <!-- Security-related classes -->
                <buildArg>--initialize-at-run-time=javax.crypto.JceSecurity</buildArg>
                <buildArg>--initialize-at-run-time=sun.security.jca.JCAUtil</buildArg>
                <buildArg>--initialize-at-run-time=javax.security.auth.Policy</buildArg>
              </buildArgs>
            </configuration>
            <executions>
              <execution>
                <id>build-native</id>
                <goals>
                  <goal>build</goal>
                </goals>
                <phase>package</phase>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
