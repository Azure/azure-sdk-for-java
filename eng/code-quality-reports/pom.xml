          <groupId>com.azure</groupId>
          <artifactId>azure-messaging-eventhubs</artifactId>
          <version>${azure-messaging-eventhubs.version}</version>
        </dependency>
      </dependencies>
      <properties>
        <client.phase>generate-sources</client.phase>
        <data.phase>none</data.phase>
      </properties>
    </profile>
  </profiles>

</project>
