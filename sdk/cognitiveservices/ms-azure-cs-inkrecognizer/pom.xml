    <modelVersion>4.0.0</modelVersion>
    <artifactId>azure-cognitiveservices-inkrecognizer</artifactId>
    <groupId>com.microsoft.azure.cognitiveservices</groupId>
    <version>1.0.0-preview.1</version>

    <name>Microsoft Azure SDK for Cognitive Service Ink Recognizer</name>
    <description>This package contains Microsoft Cognitive Service InkRecognizer SDK.</description>
    <groupId>com.microsoft.azure</groupId>
    <artifactId>InkRecognizer</artifactId>
    <version>1.0-SNAPSHOT</version> <!-- {x-version-update;com.microsoft.azure:azure-cognitiveservices-inkrecognizer;current} -->
    <name>Microsoft Azure SDK for InkRecognizer</name>
