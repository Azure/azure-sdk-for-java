{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "baseName": {
            "type": "String"
        },
        "vaults_azure_sdk_java_key_vault_name": {
            "defaultValue": "azure-sdk-java-key-vault",
            "type": "String"
        },
        "endpointSuffix": {
            "defaultValue": "vault.azure.net",
            "type": "String"
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "endpointValue": "[concat('https://',parameters('baseName'), '-', parameters('vaults_azure_sdk_java_key_vault_name'), '.', parameters('endpointSuffix'))]"
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2016-10-01",
            "name": "[parameters('vaults_azure_sdk_java_key_vault_name')]",
            "location": "[resourceGroup().location]"
        }
    ],
    "outputs": {
        "AZURE_KEYVAULT_ENDPOINT": {
            "type": "string",
            "value":  "[ parameters('endpointValue')]"
        }
    }
}
