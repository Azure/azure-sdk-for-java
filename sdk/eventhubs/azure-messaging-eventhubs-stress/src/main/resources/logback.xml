<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <if condition='isDefined("DEBUG_SHARE")'>
    <then>
      <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${DEBUG_SHARE}/java-eventhubs-stress-test.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
          <Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
          <!-- daily rollover and gzip logs -->
          <fileNamePattern>${DEBUG_SHARE}/archived/java-eventhubs-stress-test-%d{yyyy-MM-dd}.log.gz</fileNamePattern>
        </rollingPolicy>
      </appender>

      <root level="INFO">
        <appender-ref ref="RollingFile"/>
      </root>
    </then>

    <!-- If not define DEBUG_SHARE as env variable, will print log to console -->
    <else>
      <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
          <Pattern>
            %black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %blue(%logger{100}): %msg%n%throwable
          </Pattern>
        </layout>
      </appender>

      <root level="INFO">
        <appender-ref ref="STDOUT"/>
      </root>
    </else>
  </if>
</configuration>
