{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "passwordlessMysqlSingleserverItName": {
      "defaultValue": "passwordless-mysql-singleserver-it",
      "type": "String"
    },
    "testApplicationId": {
      "type": "string"
    },
    "tenantId": {
      "defaultValue": "[subscription().tenantId]",
      "type": "string"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.DBforMySQL/servers",
      "apiVersion": "2017-12-01",
      "name": "[parameters('passwordlessMysqlSingleserverItName')]",
      "location": "eastus",
      "sku": {
        "name": "GP_Gen5_4",
        "tier": "GeneralPurpose",
        "family": "Gen5",
        "capacity": 4
      },
      "properties": {
        "storageProfile": {
          "storageMB": 102400,
          "backupRetentionDays": 7,
          "geoRedundantBackup": "Disabled",
          "storageAutogrow": "Enabled"
        },
        "version": "5.7",
        "sslEnforcement": "Enabled",
        "minimalTlsVersion": "TLSEnforcementDisabled",
        "infrastructureEncryption": "Disabled",
        "publicNetworkAccess": "Enabled"
      }
    },
    {
      "type": "Microsoft.DBforMySQL/servers/administrators",
      "apiVersion": "2017-12-01",
      "name": "[concat(parameters('passwordlessMysqlSingleserverItName'), '/ActiveDirectory')]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforMySQL/servers', parameters('passwordlessMysqlSingleserverItName'))]"
      ],
      "properties": {
        "administratorType": "ActiveDirectory",
        "login": "passwordless-mysql-test-admin",
        "sid": "[parameters('testApplicationId')]",
        "tenantId": "[parameters('tenantId')]"
      }
    },
    {
      "type": "Microsoft.DBforMySQL/servers/configurations",
      "apiVersion": "2017-12-01",
      "name": "[concat(parameters('passwordlessMysqlSingleserverItName'), '/audit_log_enabled')]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforMySQL/servers', parameters('passwordlessMysqlSingleserverItName'))]"
      ],
      "properties": {
        "value": "OFF",
        "source": "system-default"
      }
    },
    {
      "type": "Microsoft.DBforMySQL/servers/configurations",
      "apiVersion": "2017-12-01",
      "name": "[concat(parameters('passwordlessMysqlSingleserverItName'), '/gtid_mode')]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforMySQL/servers', parameters('passwordlessMysqlSingleserverItName'))]"
      ],
      "properties": {
        "value": "OFF",
        "source": "system-default"
      }
    },
    {
      "type": "Microsoft.DBforMySQL/servers/configurations",
      "apiVersion": "2017-12-01",
      "name": "[concat(parameters('passwordlessMysqlSingleserverItName'), '/init_connect')]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforMySQL/servers', parameters('passwordlessMysqlSingleserverItName'))]"
      ],
      "properties": {
        "source": "system-default"
      }
    },
    {
      "type": "Microsoft.DBforMySQL/servers/databases",
      "apiVersion": "2017-12-01",
      "name": "[concat(parameters('passwordlessMysqlSingleserverItName'), '/db')]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforMySQL/servers', parameters('passwordlessMysqlSingleserverItName'))]"
      ],
      "properties": {
        "charset": "latin1",
        "collation": "latin1_swedish_ci"
      }
    },
    {
      "type": "Microsoft.DBforMySQL/servers/databases",
      "apiVersion": "2017-12-01",
      "name": "[concat(parameters('passwordlessMysqlSingleserverItName'), '/information_schema')]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforMySQL/servers', parameters('passwordlessMysqlSingleserverItName'))]"
      ],
      "properties": {
        "charset": "utf8",
        "collation": "utf8_general_ci"
      }
    },
    {
      "type": "Microsoft.DBforMySQL/servers/databases",
      "apiVersion": "2017-12-01",
      "name": "[concat(parameters('passwordlessMysqlSingleserverItName'), '/mysql')]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforMySQL/servers', parameters('passwordlessMysqlSingleserverItName'))]"
      ],
      "properties": {
        "charset": "latin1",
        "collation": "latin1_swedish_ci"
      }
    },
    {
      "type": "Microsoft.DBforMySQL/servers/databases",
      "apiVersion": "2017-12-01",
      "name": "[concat(parameters('passwordlessMysqlSingleserverItName'), '/performance_schema')]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforMySQL/servers', parameters('passwordlessMysqlSingleserverItName'))]"
      ],
      "properties": {
        "charset": "utf8",
        "collation": "utf8_general_ci"
      }
    },
    {
      "type": "Microsoft.DBforMySQL/servers/databases",
      "apiVersion": "2017-12-01",
      "name": "[concat(parameters('passwordlessMysqlSingleserverItName'), '/sys')]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforMySQL/servers', parameters('passwordlessMysqlSingleserverItName'))]"
      ],
      "properties": {
        "charset": "utf8",
        "collation": "utf8_general_ci"
      }
    },
    {
      "type": "Microsoft.DBforMySQL/servers/firewallRules",
      "apiVersion": "2017-12-01",
      "name": "[concat(parameters('passwordlessMysqlSingleserverItName'), '/AllowAll_2022-9-14_18-12-24')]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforMySQL/servers', parameters('passwordlessMysqlSingleserverItName'))]"
      ],
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "255.255.255.255"
      }
    },
    {
      "type": "Microsoft.DBforMySQL/servers/securityAlertPolicies",
      "apiVersion": "2017-12-01",
      "name": "[concat(parameters('passwordlessMysqlSingleserverItName'), '/Default')]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforMySQL/servers', parameters('passwordlessMysqlSingleserverItName'))]"
      ],
      "properties": {
        "state": "Disabled",
        "disabledAlerts": [
          ""
        ],
        "emailAddresses": [
          ""
        ],
        "emailAccountAdmins": false,
        "retentionDays": 0
      }
    }
  ],
  "outputs": {
    "AZURE_MYSQL_ACCOUNT_NAME": {
      "type": "string",
      "value": "[parameters('passwordlessMysqlSingleserverItName')]"
    }
  }
}
