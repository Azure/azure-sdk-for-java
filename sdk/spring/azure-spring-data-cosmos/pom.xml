                <!--Excluding PersonCrossPartitionIT test class, as it creates large containers which are not suitable for emulator-->
                <exclude>**/PersonCrossPartitionIT.java</exclude>
              </excludes>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
