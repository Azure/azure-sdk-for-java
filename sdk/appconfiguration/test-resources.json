{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "baseName": {
            "type": "String"
        },
        "configurationStores_azconfig_name": {
            "defaultValue": "azconfig-java",
            "type": "String"
        },
        "endpointSuffix": {
            "defaultValue": ".azconfig.io",
            "type": "String"
        }
    },
    "variables": {
        "uniqueAzConfigName": "[concat(parameters('baseName'), '-' , parameters('configurationStores_azconfig_name'))]",
        "endpointValue": "[concat('https://', parameters('configurationStores_azconfig_name'), parameters('endpointSuffix'))]",
        "location": "[resourceGroup().location]"
    },
    "resources": [
        {
            "type": "Microsoft.AppConfiguration/configurationStores",
            "apiVersion": "2019-02-01-preview",
            "name": "[variables('uniqueAzConfigName')]",
            "location":"[variables('location')]",
            "properties": {
                "endpoint":"[variables('endpointValue')]"
            }
        }
    ],
    "outputs": {
        "AZURE_STORAGE_QUEUE_CONNECTION_STRING": {
            "type": "string",
            "value":  "[concat( variables('endpointValue'), ';Id=XXXXX;Secret=YYY')]"
        }
    }
}
