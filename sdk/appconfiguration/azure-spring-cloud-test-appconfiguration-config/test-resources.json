{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "testApplicationId": {
            "type": "string",
            "metadata": {
                "description": "The principal to assign the role to"
            }
        },
        "builtInRoleType": {
            "type": "string",
            "defaultValue": "App Configuration Data Owner",
            "allowedValues": [
                "App Configuration Data Owner"
            ],
            "metadata": {
                "description": "Built-in role to assign"
            }
        },
        "roleNameGuid": {
            "type": "string",
            "defaultValue": "[newGuid()]",
            "metadata": {
                "description": "A new GUID used to identify the role assignment"
            }
        }
    },
    "variables": {
        "configStoreName": "[substring(toLower(concat('appconfig-', uniqueString(resourceGroup().id))), 0, 22)]",
        "keyValueNames": [
            "~2Fapplication~2Fconfig.message"
        ],
        "keyValueValues": [
            "Test"
        ],
        "contentType": "",
        "tags": {},
        "App Configuration Data Owner": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', '5ae67dd6-50cb-40e7-96ff-dc2bfa4b606b')]"
    },
    "resources": [
        {
            "location": "[resourceGroup().location]",
            "type": "Microsoft.AppConfiguration/configurationStores",
            "apiVersion": "2020-07-01-preview",
            "name": "[variables('configStoreName')]",
            "sku": {
                "name": "standard"
            }
        },
        {
            "type": "Microsoft.AppConfiguration/configurationStores/keyValues",
            "apiVersion": "2020-07-01-preview",
            "name": "[concat(variables('configStoreName'), '/', variables('keyValueNames')[copyIndex()])]",
            "copy": {
                "name": "keyValueCopy",
                "count": "[length(variables('keyValueNames'))]"
            },
            "dependsOn": [
                "[variables('configStoreName')]"
            ],
            "properties": {
                "value": "[variables('keyValueValues')[copyIndex()]]",
                "contentType": "[variables('contentType')]",
                "tags": "[variables('tags')]"
            }
        },
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2020-04-01-preview",
            "name": "[parameters('roleNameGuid')]",
            "scope": "[concat('Microsoft.AppConfiguration/configurationStores', '/', variables('configStoreName'))]",
            "dependsOn": [
                "[variables('configStoreName')]"
            ],
            "properties": {
                "roleDefinitionId": "[variables(parameters('builtInRoleType'))]",
                "principalId": "[parameters('testApplicationId')]"
            }
        }
    ],
    "outputs": {
        "AZURE_TENANT_ID": {
            "type": "string",
            "value": "[parameters('tenantId')]"
        },
        "AZURE_CLIENT_ID": {
            "type": "string",
            "value": "[parameters('testApplicationId')]"
        },
        "AZURE_CLIENT_SECRET": {
            "type": "string",
            "value": "[parameters('testApplicationSecret')]"
        },
        "STORE_NAME": {
            "type": "string",
            "value": "[concat('https://', variables('configStoreName'), '.azconfig.io')]"
        }
    }
}