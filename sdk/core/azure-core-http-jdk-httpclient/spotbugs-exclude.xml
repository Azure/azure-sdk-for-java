<?xml version="1.0" encoding="UTF-8"?>

<FindBugsFilter xmlns="https://github.com/spotbugs/filter/3.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="https://github.com/spotbugs/filter/3.0.0 https://raw.githubusercontent.com/spotbugs/spotbugs/3.1.0/spotbugs/etc/findbugsfilter.xsd">
  <Match>
    <Bug pattern="CT_CONSTRUCTOR_THROW"/>
    <Class name="com.azure.core.http.jdk.httpclient.JdkHttpClient"/>
    <Method name="&lt;init&gt;"/>
  </Match>

  <Match>
    <Bug pattern="EI_EXPOSE_REP2"/>
    <Or>
      <And>
        <Class name="com.azure.core.http.jdk.httpclient.JdkHttpClientBuilder"/>
        <Method name="configuration"/>
      </And>
      <And>
        <Or>
          <Class name="com.azure.core.http.jdk.httpclient.implementation.JdkHttpResponseBase"/>
          <Class name="com.azure.core.http.jdk.httpclient.implementation.JdkHttpResponseSync"/>
        </Or>
        <Method name="&lt;init&gt;"/>
      </And>
      <And>
        <Class name="com.azure.core.http.jdk.httpclient.implementation.InputStreamTimeoutResponseSubscriber"/>
        <Method name="onError"/>
      </And>
    </Or>
  </Match>

  <Match>
    <Bug pattern="EI_EXPOSE_REP"/>
    <Or>
      <And>
        <Or>
          <Class name="com.azure.core.http.jdk.httpclient.implementation.BodyIgnoringSubscriber"/>
          <Class name="com.azure.core.http.jdk.httpclient.implementation.ByteArrayTimeoutResponseSubscriber"/>
        </Or>
        <Method name="getBody"/>
      </And>
      <And>
        <Class name="com.azure.core.http.jdk.httpclient.implementation.JdkHttpResponseBase"/>
        <Method name="getHeaders"/>
      </And>
    </Or>
  </Match>

  <Match>
    <Bug pattern="UWF_FIELD_NOT_INITIALIZED_IN_CONSTRUCTOR"/>
    <Or>
      <And>
        <Class name="com.azure.core.http.jdk.httpclient.implementation.ByteArrayTimeoutResponseSubscriber"/>
        <Or>
          <Field name="currentTimeout"/>
          <Field name="subscription"/>
        </Or>
      </And>
      <And>
        <Class name="com.azure.core.http.jdk.httpclient.implementation.InputStreamTimeoutResponseSubscriber"/>
        <Or>
          <Field name="currentTimeout"/>
          <Field name="subscription"/>
        </Or>
      </And>
    </Or>
  </Match>

  <Match>
    <Bug pattern="RV_RETURN_VALUE_IGNORED_BAD_PRACTICE"/>
    <Class name="com.azure.core.http.jdk.httpclient.implementation.InputStreamTimeoutResponseSubscriber"/>
    <Or>
      <Method name="close"/>
      <Method name="onError"/>
    </Or>
  </Match>
</FindBugsFilter>
